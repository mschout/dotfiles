[alias]
	ci = commit
	st = status
	di = diff
	co = checkout
	tag-commit = !sh -c 'git rev-list $0 | head -n 1'
	log1 = log --pretty=oneline --abbrev-commit
	dsm = diff --stat master
	ls-other = ls-files --others --exclude-standard

[color]
	diff = auto
	status = auto
	branch = auto

[user]
	name = Michael Schout
	email = mschout@gkg.net

